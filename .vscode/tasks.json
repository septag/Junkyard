{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Windows",
            "type": "shell",
            "command": "ninja",
            "args": [],
            "problemMatcher": [
                "$msCompile"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.build/Ninja"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build Linux",
            "type": "shell",
            "command": "ninja",
            "args": [],
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.build/Ninja"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },        
        {
            "label": "Configure Windows",
            "type": "shell",
            "command": "${workspaceFolder}/projects/CMake/ConfigureNinja.bat"
        },
        {
            "label": "Configure Linux",
            "type": "shell",
            "command": "${workspaceFolder}/projects/CMake/ConfigureNinja.sh",
            "args": ["-DCMAKE_EXPORT_COMPILE_COMMANDS=1", "-DCMAKE_BUILD_TYPE=Debug"],
            "problemMatcher": ["$gcc"]
        }
    ]
}